@model BookListMVC.Models.Book

<br />
<h2 class="text-info">@(Model.Id==0 ? "Create" : "Edit") </h2>

<div class="border-bottom container" style="padding:30px;">
    <div class="text-danger" asp-validation-summary="ModelOnly" />
    <form method="post">
        @if (Model.Id!=0) {
            <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />
        }
        
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" value="@Model.Name" />
            </div>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Author" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Author" value="@Model.Author"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="ISBN" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ISBN" value="@Model.ISBN"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">@(Model.Id!=0? "Update" : "Create")</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
      <partial name="_ValidationScriptsPartial" />
}
